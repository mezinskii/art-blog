---
interface Props {
	date: Date;
	lang?: string;
}

const { date, lang } = Astro.props;
const locale = lang === 'ru' ? 'ru-RU' : 'en-US';
---

<time class="text-sm text-gray" datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
