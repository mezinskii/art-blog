---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { useTranslations, type UiType } from "../i18n/utils";
import "@fortawesome/fontawesome-svg-core/styles.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, lang } = Astro.props;

const t = useTranslations(lang as UiType);
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead lang={lang} title={title} description={description} />
  </head>
  <body>
    <Header title={t("site.title")} lang={lang} />
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      import { library, config, dom } from "@fortawesome/fontawesome-svg-core";
      import { faGgCircle, faYandex, faMedium, faYoutube, faThreads, faFacebook, faXTwitter } from "@fortawesome/free-brands-svg-icons";

      config.autoAddCss = false;

      library.add(faGgCircle);
      library.add(faYandex);
      library.add(faMedium);
      library.add(faYoutube);
      library.add(faFacebook);
      library.add(faXTwitter);
      library.add(faThreads);
      dom.watch();
    </script>
  </body>
</html>
